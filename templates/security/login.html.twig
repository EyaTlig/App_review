{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: #f5f6fa;">
        <div class="card shadow-lg p-4" style="width: 400px; border-radius: 10px;">
            <div class="text-center mb-4">
                <img src="{{ asset('images/logo.png') }}" class="logo-login" alt="Logo">
                <h3 class="fw-bold">App-Review</h3>
                <p class="text-muted">Connectez-vous pour continuer</p>
            </div>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control form-control-lg" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control form-control-lg" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary btn-lg w-100 fw-bold" type="submit" style="transition: 0.3s;">
                    Se connecter
                </button>

                <div class="text-center mt-3">
                    <p class="mb-0">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="text-decoration-none fw-semibold">S’inscrire</a></p>
                </div>
            </form>
        </div>
    </div>

    <style>
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
        .logo-login {
            width: 90px; /* augmente ici (ex: 250px, 300px…) */
            height: auto;
            display: block;
            margin: 0 auto 7px; /* centrer + espacement */
        }
    </style>
{% endblock %}
