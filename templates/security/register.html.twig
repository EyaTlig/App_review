{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: #f5f6fa;">
        <div class="card shadow-lg p-4" style="width: 450px; border-radius: 12px;">
            <div class="text-center mb-4">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" style="height: 60px; margin-bottom: 10px;">
                <h3 class="fw-bold">App-Review</h3>
                <p class="text-muted">Créez votre compte</p>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <form method="POST" action="{{ path('app_register') }}">
                <div class="mb-3">
                    <label for="name" class="form-label">Nom</label>
                    <input type="text" class="form-control form-control-lg" id="name" name="name" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" class="form-control form-control-lg" id="password" name="password" required>
                </div>

                <div class="mb-3">
                    <label for="role" class="form-label">Rôle</label>
                    <select name="role" id="role" class="form-select form-select-lg">
                        <option value="CUSTOMER">Customer</option>
                        <option value="SERVICE_OWNER">Service Owner</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold" style="transition: 0.3s;">
                    S’inscrire
                </button>

                <div class="text-center mt-3">
                    <p class="mb-0">Déjà un compte ? <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold">Connectez-vous</a></p>
                </div>
            </form>
        </div>
    </div>

    <style>
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}
